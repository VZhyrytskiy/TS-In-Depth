{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "strict": true,
    "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./buildcache",

    // new decorator specification
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,

    // import + with + type + json
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "lib": [
      "es2022",
      "ESNext.Disposable",  // using keyword support
      "ESNext.Decorators",  // metadata property support in decoratrs
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}